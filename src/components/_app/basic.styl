$rub = 'rub'
$osc = 'Open Sans Condensed', sans-serif
$rob = 'Roboto', sans-serif
$ar = Arial, 'Helvetica Neue', Helvetica, sans-serif

$resize_tr = .1s linear
$desktop = '(min-width: 1100px)'

$flex_no_shrink =
    flex-shrink: 0
    flex-grow: 0

html
    position: static
    width: 100%
    //height: 100%
    min-height: 100%
    //overflow-y: scroll
    display: block
    margin: 0
    padding: 0
    box-sizing: border-box
    font-size: 62.5%
    background-color: #ececec

body
    position: relative
    width: 100%
    height: 100%
    display: block
    margin: 0
    padding: 0
    box-sizing: border-box
    color: #333
    font-family: $ar
    line-height: 1
    background-color: transparent
    -webkit-tap-highlight-color: transparent
    
h1
    display: block
    text-align: left
    margin: 42px 0 0
    padding: 0
    font: 700 30px/40px $osc
    
.rub
    font-family: $rub
    font-weight: 400
    line-height: inherit
    font-size: inherit
    color: inherit
    transition: all $resize_tr
    
.basic-radio
    position: absolute
    left: -9999px
    user-select: none
    
    